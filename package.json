{
  "name": "battlecard",
  "version": "1.0.0",
  "description": "",
  "private": "true",
  "workspaces": [
    "api",
    "app"
  ],
  "engines": {
    "npm": "7.20.3"
  },
  "main": "index.js",
  "scripts": {
    "build": "npm run build --workspace=app",
    "start": "npm run build && npm start --workspace=api",
    "dev:api": "npm run dev --workspace=api",
    "dev:app": "npm run dev --workspace=app"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xsrpm/battlecard-back.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/xsrpm/battlecard-back/issues"
  },
  "homepage": "https://github.com/xsrpm/battlecard-back#readme",
  "devDependencies": {
    "handlebars": "~4.5.3",
    "jest": "^22.4.3",
    "standard": "^16.0.3"
  },
  "eslintConfig": {
    "extends": "./node_modules/standard/eslintrc.json",
    "env": {
      "jest": true,
      "browser": true,
      "node": true
    },
    "rules": {
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ]
    }
  }
}

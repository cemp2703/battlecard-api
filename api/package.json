{
  "name": "battlecard-api",
  "version": "0.1.0",
  "main": "src/index.js",
  "engines": {
    "node": ">=16.13.1"
  },
  "scripts": {
    "start": "tsc && node build/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "dev": "ts-node-dev src/index.ts",
    "tsc": "tsc",
    "lint": "ts-standard"
  },
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "typescript": "4.8.4",
    "uuid": "8.3.1",
    "ws": "7.3.1"
  },
  "devDependencies": {
    "@types/cors": "2.8.12",
    "@types/express": "4.17.14",
    "@types/ws": "8.5.3",
    "jest": "29.1.2",
    "ts-jest": "29.0.3",
    "ts-node-dev": "2.0.0",
    "ts-standard": "12.0.1"
  },
  "eslintConfig": {
    "extends": "./node_modules/ts-standard/eslintrc.json",
    "env": {
      "jest": true,
      "browser": true,
      "node": true
    },
    "ignorePatterns": [
      "build/**"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off"
    }
  }
}
